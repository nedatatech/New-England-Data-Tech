<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Service</th>    
      <th>Average cost</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= link_to(service.name, html_options = {:action => 'show', :id => service.slug}) %></td>
        <td><%= service.avg_cost %></td>
        <td><%= service.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
